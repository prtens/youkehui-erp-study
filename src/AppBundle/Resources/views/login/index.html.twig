{% extends "base.html.twig" %}

{% do css(['libs/vendor.css', 'app.css'], 100) %}
{% do script(['libs/vendor.js', 'app.js'], 100) %}
{% do script(['app/login/index.js']) %}

{% set body_class = 'login-page' %}

{% block title %}登录 - 悠客會管理系统{% endblock %}

{% block body %}

<div class="login-box">
  <div class="login-logo">
    <img src="{{ asset('assets/img/default/logo.png') }}" width="360">
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">

    {% if error %}
      <div class="alert alert-danger">{{ error.message|trans }}</div>
    {% endif %}

    <form action="{{ path('login_check') }}" method="post">
      <div class="form-group">
        <label for="username">加盟商账号名称</label>
        <input type="text" class="form-control" id="username" name="_username"  value="{{ last_username }}">
        <div class="help-block">子账号登录方式为"加盟商主账号名称:子账号名称"</div>
      </div>
      <div class="form-group">
        <label for="username">密码</label>
        <input type="password" class="form-control" id="password" name="_password">
      </div>
      {#<input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">#}
      <div class="row">
        <div class="col-xs-8">
          <input type="checkbox" name="_remember_me" checked="checked">记住密码
        </div>

        <!-- /.col -->
        <div class="col-xs-4">
          {{ form_csrf_token() }}
          <button type="submit" class="btn btn-primary btn-block">登录</button>
        </div>
        <!-- /.col -->
      </div>
    </form>
  </div>
  <!-- /.login-box-body -->
</div>

{% endblock %}