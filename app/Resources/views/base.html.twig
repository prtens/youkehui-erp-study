{% import "macro.html.twig" as app_macro %}
<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1, maximum-scale=1">
    <meta content="{{ csrf_token(default_csrf_token_id) }}" name="csrf-token" />
    <title>{% block title %}{% endblock %}</title>
    <meta name="description" content="{% block description %}{% endblock %}" />
    <meta name="keywords" content="{% block keywords %}{% endblock %}" />
    <!--[if lt IE 9]>
      <script src="{{ asset('static/libs/fix-ie.js') }}"></script>
    <![endif]-->
    {% block stylesheets %}
      {% include 'css_loader.html.twig' %}
    {% endblock %}
  </head>
  <body{% if body_class is defined %} class="{{ body_class }}"{% endif %}>
    {% block body %}{% endblock %}
    <div id="modal" class="modal" data-backdrop="static"></div>
    {% block scripts %}
      {% include 'js_loader.html.twig' %}
    {% endblock %}
  </body>
</html>